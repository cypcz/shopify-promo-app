{
  "name": "shopify-test",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "yarn build:server && yarn build:next",
    "build:server": "tsc",
    "build:next": "next build",
    "start": "NODE_ENV=production node dist/src/index.js",
    "tsc": "tsc",
    "lt": "lt --port 3000",
    "lint:all": "eslint 'src/**/*.ts' --max-warnings 0",
    "generate": "dotenv -- prisma generate",
    "prisma:migrate:save": "dotenv -- prisma migrate dev --create-only --preview-feature",
    "prisma:migrate:up": "dotenv -- prisma migrate dev --preview-feature",
    "prisma:migrate:deploy": "dotenv -- prisma migrate deploy --preview-feature",
    "prisma:seed": "dotenv -- ts-node prisma/seeds/index.ts"
  },
  "dependencies": {
    "@apollo/client": "^3.3.12",
    "@prisma/client": "^2.19.0",
    "@shopify/app-bridge-react": "^1.29.0",
    "@shopify/app-bridge-utils": "^1.29.0",
    "@shopify/polaris": "^6.1.0",
    "apollo-link-context": "^1.0.20",
    "apollo-server-express": "^2.21.1",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-middleware": "^6.0.4",
    "helmet": "^4.4.1",
    "next": "10.0.9",
    "nexus": "^1.0.0",
    "nodemon": "^2.0.7",
    "query-string": "^6.14.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "shopify-nextjs-toolbox": "^0.1.12"
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "localtunnel": "^2.0.1",
    "prettier": "^2.2.1",
    "prisma": "^2.19.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
